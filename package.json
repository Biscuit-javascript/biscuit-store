{
  "private": true,
  "description": "Library for managing javascript application states",
  "author": "Zhulev Philipp",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "javascript",
    "react",
    "state",
    "library",
    "state-managment",
    "es6"
  ],
  "repository": "https://github.com/Biscuit-javascript/biscuit-store.git",
  "bugs": {
    "url": "https://github.com/Biscuit-javascript/biscuit-store/issues"
  },
  "license": "MIT",
  "scripts": {
    "playground:start": "parcel ./playground/index.html --open",
    "playground:build": "parcel build ./playground/index.html",
    "test": "lerna run --parallel test",
    "prettier": "prettier ./packages/*/**/*.{js,ts}",
    "lint": "eslint ./packages/*/**/*.{js,ts}",
    "release:publish": "lerna publish from-package --dist-tag next",
    "changelog:add": "changeset add",
    "changelog:ver": "changeset version",
    "changelog:publish": "changeset publish",
    "version": "lerna run --parallel ver",
    "update": "lerna run --parallel update",
    "pub:main": "lerna run --parallel publish:main",
    "pub:second": "lerna run --parallel publish:second",
    "build": "lerna run --parallel build:release",
    "release:publish:next": "lerna publish from-package --dist-tag next",
    "release:publish:latest": "lerna publish from-package --dist-tag latest"
  },
  "dependencies": {
    "custom-env": "^2.0.1",
    "global": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run test"
    }
  },
  "lint-staged": {
    "./packages/*/{src,tests}/*.(js|ts)": [
      "yarn run lint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-transform-regenerator": "^7.12.13",
    "hoist-non-react-statics": "^3.3.2",
    "loose-envify": "^1.4.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "prop-types": "^15.7.2",
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "regenerator-runtime": "^0.13.7",
    "@babel/core": "7.9.0",
    "@babel/node": "^7.6.3",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.12.7",
    "rollup-plugin-terser": "^7.0.2",
    "@babel/register": "^7.6.2",
    "rollup": "^2.7.2",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@babel/runtime": "^7.6.3",
    "@changesets/cli": "^2.1.2",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "8.1.0",
    "babel-plugin-named-asset-import": "^0.3.6",
    "babel-preset-react-app": "^9.1.2",
    "camelcase": "^5.3.1",
    "dtslint": "^4.0.7",
    "eslint": "^6.6.0",
    "eslint-loader": "3.0.3",
    "eslint-plugin-flowtype": "4.6.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "husky": "^5.0.9",
    "jest": "24.9.0",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-resolve": "24.9.0",
    "jest-watch-typeahead": "0.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "parcel-bundler": "^1.6.1",
    "prettier": "^2.2.1",
    "sonarjs": "^1.0.0",
    "typescript": "3.8.3"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "publishConfig": {
    "access": "public"
  }
}
